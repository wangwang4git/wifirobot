<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/setbackgroun07" >
    <LinearLayout 
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#90505070">
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tv_videoAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/tv_videoAddr"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <EditText
                    android:id="@+id/et_videoAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_videoAddr"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="17dp"
                    android:inputType="textUri"/>
                    

            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tv_videoPort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/tv_videoPort"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <EditText
                    android:id="@+id/et_videoPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_videoPort"
                    android:layout_marginLeft="47dp"
                    android:layout_alignParentTop="true"
                    android:inputType="number"/>
                
            </LinearLayout>
           
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tv_controlAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/tv_controlAddr"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <EditText
                    android:id="@+id/et_controlAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_controlAddr"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:inputType="text"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tv_controlPort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/tv_controlPort"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
                <EditText
                    android:id="@+id/et_controlPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_controlPort"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="29dp"
                    android:inputType="number"/>
                
            </LinearLayout>
                     
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                

                
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#80A09070">
            

            
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/tv_up"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/tv_up"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <EditText
                    android:id="@+id/et_up"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_up"
                    android:layout_marginLeft="3dp"
                    android:inputType="text"/>
                
             
                <TextView 
                    android:id="@+id/tv_left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/et_up"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/tv_left"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <EditText
                    android:id="@+id/et_left"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_left"
                    android:inputType="text"/>
                

                
            </LinearLayout>
            
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/tv_down"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/tv_down"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <EditText
                    android:id="@+id/et_down"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_down"
                    android:inputType="text"/>"
                

                
               <TextView 
                    android:id="@+id/tv_right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/et_down"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="22dp"
                    android:text="@string/tv_right"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <EditText
                    android:id="@+id/et_right"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_right"
                    android:inputType="text"/>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tv_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/tv_stop"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText 
                    android:id="@+id/et_stop"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_stop"
                    android:layout_alignParentTop="true"
                    android:inputType="text"/> 

            </LinearLayout>
            
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/tv_camera_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/tv_camera_h"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <EditText 
                    android:id="@+id/et_camera_h"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_camera_h"
                    android:inputType="text"/>
                
                <TextView
                    android:id="@+id/tv_h_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/et_camera_h"
                    android:text="DT"
                    android:layout_marginLeft="35dp"/>
                
                <CheckBox 
                    android:id="@+id/cb_h_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_h_number"/>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/tv_camera_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/tv_camera_v"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                
                <EditText 
                    android:id="@+id/et_camera_v"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_camera_v"
                    android:layout_marginLeft="4dp"
                    android:inputType="text"/>
                
                <TextView
                    android:id="@+id/tv_v_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/et_camera_v"
                    android:text="DT"
                    android:layout_marginLeft="35dp"/>
                
                <CheckBox 
                    android:id="@+id/cb_v_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_v_number"/>
                
                
            </LinearLayout>
            

            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">
        
         <Button 
            android:id="@+id/bt_save"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="@string/bt_save"
            android:layout_gravity="center"
            />
        

        
    </LinearLayout>

</LinearLayout>